#!/bin/bash
DFDIR=~/.dotfiles/

## Executable scripts, exclude folders wich contains binary files
find . -maxdepth 1 -type f -exec cp -rvu {} ${DFDIR}.bin/ \;

## Configuration files and folders
cp -rvu ~/.config/bspwm ${DFDIR}.config/
cp -rvu ~/.config/sxhkd ${DFDIR}.config/
cp -rvu ~/.config/compton ${DFDIR}.config/

## Files in my home root
cp -rvu ~/.Xresources ${DFDIR}
cp -rvu ~/.xinitrc ${DFDIR}
cp -rvu ~/.bash_profile ${DFDIR}



